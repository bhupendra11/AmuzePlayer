<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="bhupendrashekhawat.me.android.amuzeplayer.PlayActivity"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/album_art_blur"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:translationZ="4dp"
            android:id="@+id/album_art"
            android:layout_margin="48dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/album_art_placeholder"
            />

    </FrameLayout>


    <TextView
        android:text="Song Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:id="@+id/song_title_label" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="curr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/song_current_duration_label"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <TextView
            android:text="total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/song_total_duration_label"
            android:layout_marginRight="@dimen/activity_horizontal_margin"/>
    </LinearLayout>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/songProgressBar" />

    <include
        layout="@layout/player_controls"

        android:layout_width="match_parent"
        android:layout_height="70dp"
        />


</LinearLayout>
